# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?appName=AppName

# Server Configuration
PORT=5000
NODE_ENV=development

# IP Whitelist for admin operations (comma-separated)
# Only these IPs can create, update, or delete products
# Example: 91.117.234.145,127.0.0.1,::1
ALLOWED_IPS=127.0.0.1,::1

# Note: In production (Render.com), set NODE_ENV=production
# Configure ALLOWED_IPS in Render's environment variables dashboard
